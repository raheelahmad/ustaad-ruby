#! /Users/raheel/.rvm/bin/rvm-auto-ruby
# encoding: utf-8
require_relative "../lib/ustaad/ustaad"
require_relative "../lib/ustaad/kitaab"
require_relative "../lib/ustaad/mushq"

# setup the args 
# arg_string = ARGV.join(' ')
# args = arg_string.split(' ')

ustaad ||= Ustaad::Ustaad.new
print "→ "
while args = STDIN.gets
	args = args.split(' ')
	if args.length == 0 or args[0] == 'exit'
		exit
	end
	noun = args[1]
	verb = args[0]
	output = ustaad.act(verb:verb, noun:noun)
	puts output if output.length > 1
	print "→ "
end
